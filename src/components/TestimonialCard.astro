---
import type { Testimonial } from "../data/testimonials";
const { testimonial } = Astro.props;
---
<div class="flex flex-col items-center bg-primary-light/10 dark:bg-primary-dark/20 border border-primary-light dark:border-primary-dark rounded-xl p-6 shadow-md max-w-md mx-auto">
  <img src={testimonial.photo} alt={testimonial.name} class="w-16 h-16 rounded-full object-cover mb-3 border-2 border-primary-light dark:border-primary-dark" loading="lazy" />
  <p class="italic text-lg mb-2 text-justify">“{testimonial.message}”</p>
  <div class="text-center">
    <span class="font-bold text-primary-light dark:text-primary-dark">{testimonial.name}</span>
    <span class="block text-sm text-n500 dark:text-n300">{testimonial.position} en {testimonial.company}</span>
  </div>
  <a href="https://www.linkedin.com/in/juancdams/" target="_blank" rel="noopener noreferrer" class="mt-4 inline-block px-3 py-1 rounded-full bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700 transition">Ver perfil de LinkedIn</a>
</div>
