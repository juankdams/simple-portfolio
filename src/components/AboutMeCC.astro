---
// data imports
import workExperience from "@/data/Jobs.ts"
import education, { additionalSkills } from "@/data/education.ts"
import languages from "../data/languages.ts"
import hardSkills from "@/data/hardSkills"
import softSkills from "@/data/softSkills"

// component imports
import JobDetails from "./JobDetails.astro";
import EduDetail from "./EduDetail.astro";
import SkillCard from "./SkillCard.astro";

// config import
import {ME} from '@/config';

---

<div class="relative flex flex-col gap-8 text-n700 dark:text-n200 w-full mt-10 px-4">
    {/*Description or About me -- Section*/}
    <div class="mb-4">
        <p class="text-justify">
            {ME.aboutMe}
        </p>
    </div>
    {/*Languages section*/}
    <div class="mb-4">
        <h2 class="text-2xl font-bold mb-4">Idiomas</h2>
        <div class="flex flex-wrap gap-3">
            {languages.filter(lang => lang.show).map((lang) => (
                <div class="flex items-center gap-2 bg-primary-light/10 dark:bg-primary-dark/20 border border-primary-light dark:border-primary-dark rounded-full px-4 py-2 shadow-sm">
                    <span class="font-semibold text-primary-light dark:text-primary-dark">{lang.name}</span>
                    <span class="text-xs bg-primary-light/80 dark:bg-primary-dark/80 text-white rounded-full px-2 py-0.5 font-medium">{lang.level}</span>
                </div>
            ))}
        </div>
    </div>
    {/*Work experience section*/}
    <div class="mb-4">
        <h2 class="text-4xl font-bold mb-4">Experiencia Laboral</h2>
        <hr class="my-6 border-t border-n300 dark:border-n700" />
        <div class="flex flex-col gap-6">
            {workExperience.map((job) => (
                    <JobDetails jobData={job}/>
            ))}
        </div>
    </div>
    {/*Education section*/}
    <div class="mb-4">
        <h2 class="text-4xl font-bold mb-4">Educación</h2>
        <hr class="my-6 border-t border-n300 dark:border-n700" />
        <div class="flex flex-col gap-6">
            {education.map((edu) => (
                <EduDetail eduData={edu}/>
            ))}
        </div>
        {additionalSkills && additionalSkills.length > 0 && (
            <div class="mt-6">
                <h2 class="text-4xl font-bold mb-4">Certificaciones Adicionales</h2>
                <ul class="flex flex-wrap gap-2">
                    {additionalSkills.map((skill) => (
                        <li class="bg-primary-light/10 dark:bg-primary-dark/20 text-primary-light dark:text-primary-dark px-3 py-1 rounded-full text-sm font-medium border border-primary-light dark:border-primary-dark">
                            {skill}
                        </li>
                    ))}
                </ul>
            </div>
        )}
    </div>
    {/*Skills section*/}
    <div class="mb-4">
        <h2 class="text-3xl font-bold mb-4">Habilidades técnicas</h2>
        <hr class="my-6 border-t border-n300 dark:border-n700" />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {hardSkills.map((skill) => (
                    <SkillCard {...skill} showDescription={true}/>
            ))}
        </div>
    </div>
    {/*Hobbies section*/}
    <div class="mb-4">
        <h2 class="text-2xl font-bold mb-4">Habilidades blandas</h2>
        <hr class="my-6 border-t border-n300 dark:border-n700" />
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {softSkills.map((skill) => (
                    <SkillCard {...skill} showDescription={false}/>
            ))}
        </div>
    </div>
</div>