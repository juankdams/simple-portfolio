---
// component imports
import {Badge} from "./ui/badge";

// lib imports
import {formatDatetime} from "../lib/utils";

interface Edu {
    title: string;
    school: string;
    location: string;
    startDate: string;
    endDate?: string;
    description: string;
    currentUni: boolean;
}

const {eduData} = Astro.props;  // Ensure correct typing for the props
const {
    title,
    school,
    location,
    startDate,
    endDate,
    description,
    currentUni
} = eduData as Edu;
---

<div class="flex flex-col gap-2">
    <Badge className="bg-primary-light dark:bg-primary-dark w-fit rounded-md">
        {formatDatetime(startDate)} - {currentUni ? "Actualidad" : formatDatetime(endDate)}
    </Badge>
    <h3 class="text-xl font-bold">{title}</h3>
    <div class="flex flex-col sm:flex-row sm:items-center gap-0 sm:gap-2">
        <p class="truncate text-base sm:text-sm font-semibold">{school}</p>
        <span class="hidden sm:inline text-sm font-bold">/</span>
        <p class="truncate text-base sm:text-sm text-n500 dark:text-n300">{location}</p>
    </div>
    <p>{description}</p>
</div>